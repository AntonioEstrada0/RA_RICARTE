  .intro-section {
    padding: 100px 0;
    background-color: #ffffff;
    text-align: center;
  }
  
  .section-title {
    color: #000000;
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 30px;
  }
  
  .section-description {
    color: #000000;
    font-size: 18px;
    line-height: 1.6;
    text-align: justify;

  }

  .section-info {
    color: #000000;
    font-size: 16px;
