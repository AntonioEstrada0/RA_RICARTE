<%- include ('layouts/header.ejs') -%> 

<body>
    
    <div class="container">
        <a href="/create" class="btn btn-outline-primary mt-4">Nuevo</a>
        <table>
            <thead>
                <tr class="bg-primary text-white">
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((tbProductos)=>{ %>
                <tr>
            
                <td><%= tbProductos.ID %></td>
                <td><%= tbProductos.nombre %></td>
                <td>
                <img src= "<%= tbProductos.imagen %>" class="img-fluid rounded-start" alt="..." width="100%"></td>
                <td><%= tbProductos.descripcion %></td>
                <td><%= tbProductos.precio %></td>
                <td>
                    <a href="/editar/<%= tbProductos.ID %>" class="btn btn-outline-info">Editar</a>
                    <a href="/delete/<%= tbProductos.ID %>" class="btn btn-outline-info">Borrar</a>
                </td>
                </tr>

                <%}) %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>

  <style>
    .container {
  max-width: 80%;
  margin: 0 auto;
  padding: 20px;
}

.btn {
  display: inline-block;
  padding: 8px 16px;
  margin-bottom: 10px;
  color: #007bff;
  border: 1px solid #007bff;
  border-radius: 4px;
  text-decoration: none;
}

.btn:hover {
  background-color: #007bff;
  color: #fff;
}

table {
  width: 100%;
  
  border-collapse: collapse;
}

thead {
  background-color: #007bff;
  color: #fff;
}

th,td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid  #007bff;
}

tr:nth-child(even) {
  background-color: #fff;
}

img {
  max-width: 100%;
  height: auto;
}

  </style>


