<%- include ('layouts/header.ejs') -%> 

<body>
    
<% if (tbProductos){%>
<div class="container mt-4">
    <div class="card border-secondary">
        <div class="card-header">EDITAR registro</div>

        <div class="card-body">
            <form action="/save" method="post">
                <input id="id" name="id" value="<% tbProductos.id %>" hidden">
                <div class="mb-3">
                    <label for="tbProductos" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<% tbProductos.nombre %>"  tabindex="1">
                </div>
                <div class="mb-3">
                    <label for="tbProductos" class="form-label">Imagen</label>
                    <input type="text" class="form-control" id="imagen" name="imagen" value="<% tbProductos.imagen %>"  tabindex="2">
                </div>
                <div class="mb-3">
                    <label for="tbProductos" class="form-label">Descripcion</label>
                    <input type="text" class="form-control" id="descripcion" name="descripcion" value="<% tbProductos.descripcion %>"  tabindex="3">
                </div>
                <div class="mb-3">
                    <label for="tbProductos" class="form-label">Precio</label>
                    <input type="text" class="form-control" id="precio" name="precio" value="<% tbProductos.precio %>"  tabindex="4">
                </div>
                <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                <a href="/admin" class="btn btn-secondary">cancelar</a>
            </form>
        </div>
    </div>
</div>
<%} %>
</body>

<style>
    .container {
  max-width: 50%;
  margin: 0 auto;
  padding: 20px;
}

.card {
  border: 1px solid #007bff;
  border-radius: 4px;
}

.card-header {
  background-color: #007bff;
  color: #fff;
  padding: 10px;
}

.card-body {
  padding: 20px;
}

.form-label {
  font-weight: bold;
}

.form-control {
  margin-bottom: 10px;
}

.btn-primary {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 8px 16px;
  width: 48%;
  align-items: center;
  cursor: pointer;
}

.btn-secondary {
  background-color: #6c757d;
  color: #fff;
  border: none;
  width: 48%;
  align-items: center;
  border-radius: 4px;
  padding: 8px 16px;
  cursor: pointer;
}

.btn-primary:hover,
.btn-secondary:hover {
  opacity: 0.8;
}

</style>



